<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Record</title>
</head>

<body>
    <div align="center">
        <h2>Edit User</h2>
        <form method="post" action="/updaterecord" enctype="multipart/form-data">
            <input type="hidden" name="editid" value="<%= single.id %>">
            <table border="1">
                <tr>
                    <td>Name :- </td>
                    <td><input type="text" name="name" value="<%= single.username %>"></td>
                </tr>
                <tr>
                    <td>Email :- </td>
                    <td><input type="email" name="email" value="<%= single.useremail %>"></td>
                </tr>
                <tr>
                    <td>Password :- </td>
                    <td><input type="password" name="password" value="<%= single.userpassword %>"></td>
                </tr>
                <tr>
                    <td>Gender :- </td>
                    <td>
                        <input type="radio" <% if(single.gender=="male" ) { %> checked <% } %> value="male"
                            name="gender">Male
                            <input type="radio" <% if(single.gender=="female" ) { %> checked <% } %> value="female"
                                name="gender">Female
                    </td>
                </tr>
                <tr>
                    <td>Hobby :- </td>
                    <td>
                        <input type="checkbox" <% if(single.hobby.includes("cricket")) { %> checked <% } %>
                            value="cricket"
                            name="hobby">Cricket
                            <input type="checkbox" <% if(single.hobby.includes("reading")) { %> checked <% } %>
                                value="reading" name="hobby">Reading
                                <input type="checkbox" <% if(single.hobby.includes("dancing")) { %> checked <% } %>
                                    value="dancing" name="hobby">Dancing
                    </td>
                </tr>
                <tr>
                    <td>City :- </td>
                    <td>
                        <select name="city">
                            <option value="">---select city----</option>
                            <% city=["surat","vadodara","vapi","valsad"]; city.map((c)=>{%>
                                <option <% if(single.city==c) { %> selected
                                    <% } %> value="<%= c %>">
                                            <%= c %>
                                </option>
                                <% }) %>
                        </select>
                    </td>
                </tr>
                <tr>
                    <td>File :- </td>
                    <td>
                        <input type="file" name="image">
                        <img src="<%= single.image %>" width="100" alt="">
                    </td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit"></td>
                </tr>
            </table>
        </form>
        <a href="/">View</a>
    </div>
</body>

</html>